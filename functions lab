
func rowTheBoat() {
    print("Row, row, row your boat")
    print("Gently down the stream")
}

func merrilyDream() {
    print("Merrily, merrily, merrily, merrily")
    print("Life is but a dream")
}
func breatheBetweenVerses() {
    print("        ~        ")
}

func verseOne() {
    rowTheBoat()
    merrilyDream()
}

verseOne()
breatheBetweenVerses()


